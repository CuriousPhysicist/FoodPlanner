<div class="container flex flex-col h-full">
  <div class="py-8">
    <h1 class="text-4xl font-bold text-center">
      Ingredients
    </h1>
  </div>

  <p class="p-4">
  The ingredients below can be combined into Recipies and Meals.
  </p>

  <div class="flex flex-row flex-wrap max-w-full place-content-between">
    <% @ingredients.each do |ingredient| %>
      <%= link_to ingredient_path(ingredient), { class: "w-1/3" } do %>
        <div class="flex flex-col p-4 border border-gray-300 rounded">
          <div class="p-2">
            <%= ingredient.name %>
          </div>
          <div class="p-2">
            <%= ingredient.description %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
