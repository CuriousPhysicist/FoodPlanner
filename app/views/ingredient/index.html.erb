<div class="container flex flex-col h-full mx-auto lg:max-w-screen-md lg:mx-auto xl:max-w-screen-lg">
  <div class="py-8">
    <h1 class="text-4xl font-bold text-center">
      Ingredients
    </h1>
  </div>

  <p class="p-4">
  The ingredients below can be combined into Recipies and Meals.
  </p>

  <div class="flex flex-col flex-wrap max-w-md max-w-full sm:flex-row">
    <% @ingredients.each do |ingredient| %>
      <%= link_to ingredient_path(ingredient), { class: "h-40 sm:w-1/2 py-2 md:w-1/3 xl:w-1/4" } do %>
        <div class="flex flex-col h-full p-2 m-2 border border-gray-300 rounded">
          <div class="pb-2">
            <%= ingredient.name %>
          </div>
          <div class="line-clamp-3 overflow-ellipsis">
            <%= ingredient.description %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
