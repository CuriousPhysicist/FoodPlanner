<div class="container flex flex-col h-full">
  <div class="py-8">
    <h1 class="text-4xl font-bold text-center">
      <%= @ingredient.name %>
    </h1>
  </div>

  <div class="h-full p-2 grid grid-cols-6 grid-rows-3">
    <p class="p-2 col-span-3">
      Description:
      </br></br>
      <%= @ingredient.description %>
    </p>

    <div class="m-2 bg-green-300 col-span-3"></div>

    <table class="w-full h-full m-2 border border-gray-700 col-span-3">
      <tbody>
        <th class="border border-current" colspan="3">
          Macro-nutrients
        </th>
        <tr>
          <th class="border border-current">Totals</th>
          <th class="border border-current">Units</th>
        </tr>
        <% @ingredient.macro_nutrients.to_a.group_by(&:group).each do |group, nutrients|  %>
          <tr colspan="3">
            <th class="px-2 text-left">
              <%= group %>
            </th>
          </tr>
          <% nutrients.each do |nutrient| %>
            <% if nutrient.name.present? %>
              <tr colspan="3" class="px-2 border border-current">
                <td class="px-4">
                  <%= nutrient.name %>
                </td>
              </tr>
            <% end %>
            <tr>
              <td class="px-2 border border-current">
                <%= nutrient.specific_quantity * @ingredient.quantity %>
              </td>
              <td  class="px-2 text-center border border-current">
                <%= nutrient.unit %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <table class="min-w-full m-2 border border-gray-700 col-span-3">
      <tbody>
        <th class="border border-current" colspan="3">
          Micro-nutrients
        </th>
        <tr>
          <th class="border border-current">Totals</th>
          <th class="border border-current">Units</th>
        </tr>
        <% @ingredient.micro_nutrients.to_a.group_by(&:group).each do |group, nutrients|  %>
          <tr colspan="3">
            <th class="px-2 text-left">
              <%= group %>
            </th>
          </tr>
          <% nutrients.each do |nutrient| %>
            <% if nutrient.name.present? %>
              <tr colspan="3" class="px-2 border border-current">
                <td class="px-4">
                  <%= nutrient.name %>
                </td>
              </tr>
            <% end %>
            <tr>
              <td class="px-2 border border-current">
                <%= nutrient.specific_quantity * @ingredient.quantity %>
              </td>
              <td  class="px-2 text-center border border-current">
                <%= nutrient.unit %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
